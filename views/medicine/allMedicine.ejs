<!-- views/medicines/index.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Incluye los estilos de Tailwind -->
    <title>Listado de Medicamentos</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script defer>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('search');
            const tableRows = document.querySelectorAll('tbody tr');

            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                
                tableRows.forEach(row => {
                    const name = row.querySelector('td:nth-child(1)').textContent.toLowerCase();
                    const description = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                    
                    if (name.includes(searchTerm) || description.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>
</head>
<body>
    <header>
        <%- include('../partials/navbar') %> <!-- Incluye la barra de navegación -->
    </header>

    <main class="container mx-auto mt-10">
        <h1 class="text-3xl font-bold mb-6">Medicamentos</h1>
        <a href="/medicines/create" class="bg-blue-500 text-white px-4 py-2 rounded mb-4 inline-block">Nuevo Medicamento</a>

        <div class="mb-4">
            <input type="text" id="search" placeholder="Buscar medicamento..." class="border p-2 rounded w-full">
        </div>

        <table class="min-w-full bg-white shadow-md rounded mt-4">
            <thead>
                <tr>
                    <th class="px-4 py-2">Nombre</th>
                    <th class="px-4 py-2">Descripción</th>
                    <th class="px-4 py-2">Precio</th>
                    <th class="px-4 py-2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% medicines.forEach(medicine => { %>
                <tr>
                    <td class="border px-4 py-2"><%= medicine.name %></td>
                    <td class="border px-4 py-2"><%= medicine.description %></td>
                    <td class="border px-4 py-2"><%= medicine.price %></td>
                    <td class="border px-4 py-2">
                        <a href="/medicines/<%= medicine.id %>" class="text-blue-500">Ver</a>
                        <a href="/medicines/<%= medicine.id %>/edit" class="text-yellow-500">Editar</a>
                        <form action="/medicines/<%= medicine.id %>?_method=DELETE" method="POST" class="inline-block">
                            <button type="submit" class="text-red-500">Eliminar</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </main>

    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>
</html>
