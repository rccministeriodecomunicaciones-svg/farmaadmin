<!-- views/medicines/create.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %> <!-- Incluye los estilos de Tailwind -->
    <title>Nuevo Medicamento</title>
</head>
<body>
    <header>
        <%- include('../partials/navbar') %> <!-- Incluye la barra de navegación -->
    </header>

    <main class="container mx-auto mt-10">
        <h1 class="text-3xl font-bold mb-6">Nuevo Medicamento</h1>
        <form action="/medicines/create" method="POST" class="bg-white p-8 rounded-lg shadow-md">
            <div class="mb-4">
                <label for="name" class="block text-gray-700 font-bold mb-2">Nombre del Medicamento:</label>
                <input type="text" id="name" name="name" class="border rounded w-full py-2 px-3" required>
            </div>
            <div class="mb-4">
                <label for="description" class="block text-gray-700 font-bold mb-2">Descripción:</label>
                <textarea id="description" name="description" class="border rounded w-full py-2 px-3" required></textarea>
            </div>
            <div class="mb-4">
                <label for="price" class="block text-gray-700 font-bold mb-2">Precio:</label>
                <input type="number" id="price" name="price" class="border rounded w-full py-2 px-3" required>
            </div>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Crear</button>
        </form>
    </main>

    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>
</html>
