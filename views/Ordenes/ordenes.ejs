<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= nombrePagina %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 min-h-screen">

  <header class="bg-white shadow mb-6">
    <%- include('../partials/navbarPublic') %>    
  </header>


<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Mis Órdenes</h1>

  <% if (ordenes.length === 0) { %>
    <p class="text-gray-600">No tienes órdenes registradas.</p>
  <% } else { %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border border-gray-200">
        <thead>
          <tr class="bg-gray-100 border-b">
            <th class="px-4 py-2 text-left"># Orden</th>
            <th class="px-4 py-2 text-left">Fecha</th>
            <th class="px-4 py-2 text-left">Total</th>
            <th class="px-4 py-2 text-left">Estado</th>
            <th class="px-4 py-2 text-left">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% ordenes.forEach(orden => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="px-4 py-2"><%= orden.id %></td>
              <td class="px-4 py-2">
                <%= new Date(orden.createdAt).toLocaleString('es-ES', { 
                  day: '2-digit', month: '2-digit', year: 'numeric', 
                  hour: '2-digit', minute: '2-digit' 
                }) %>
              </td>
              <td class="px-4 py-2">$<%= orden.total.toFixed(2) %></td>
              <td class="px-4 py-2">
                <% if (orden.estado === 'pendiente') { %>
                  <span class="text-yellow-600 font-semibold">Pendiente</span>
                <% } else if (orden.estado === 'completada') { %>
                  <span class="text-green-600 font-semibold">Completada</span>
                <% } else { %>
                  <span class="text-red-600 font-semibold"><%= orden.estado %></span>
                <% } %>
              </td>
              <td class="px-4 py-2">
                <a href="/Public/ordenes/<%= orden.id %>" 
                   class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">
                  Ver Detalle
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>



</body>
</html>
