<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= nombrePagina %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    /* Animación fade-slide para productos */
    .fade-slide {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeSlideIn 0.5s forwards;
    }

    @keyframes fadeSlideIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Glow en botones hover */
    .btn-glow:hover {
      box-shadow: 0 0 15px rgba(34, 197, 94, 0.7), 0 0 25px rgba(34, 197, 94, 0.5);
    }

    /* Focus input */
    input:focus,
    select:focus {
      outline: none;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5);
      border-color: #3b82f6;
      transition: all 0.3s ease-in-out;
    }

    /* Tooltip */
    .tooltip {
      position: relative;
      cursor: pointer;
    }

    .tooltip .tooltip-text {
      visibility: hidden;
      opacity: 0;
      width: max-content;
      background-color: rgba(0, 0, 0, 0.8);
      color: #fff;
      text-align: center;
      border-radius: 0.375rem;
      padding: 0.25rem 0.5rem;
      position: absolute;
      z-index: 10;
      bottom: 125%;
      left: 50%;
      transform: translateX(-50%);
      transition: opacity 0.3s, transform 0.3s;
      font-size: 0.75rem;
      pointer-events: none;
    }

    .tooltip:hover .tooltip-text {
      visibility: visible;
      opacity: 1;
      transform: translateX(-50%) translateY(-5px);
    }

    /* Badge stock */
    .badge {
      position: absolute;
      top: 0.5rem;
      right: 0.5rem;
      padding: 0.25rem 0.5rem;
      border-radius: 9999px;
      font-size: 0.75rem;
      font-weight: bold;
      color: white;
      text-transform: uppercase;
      animation: pulseStock 1.5s infinite;
    }

    @keyframes pulseStock {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.1);
      }
    }
  </style>
</head>

<body class="bg-gray-100 min-h-screen font-sans">

  <header class="bg-gradient-to-r from-blue-600 to-green-500 shadow-lg mb-8">
    <%- include('../partials/navbarPublic') %>    
  </header>

  <main class="container mx-auto px-4">

    <!-- Formulario de búsqueda y filtro -->
    <form method="GET" action="/Public/productos" class="mb-8 flex flex-col md:flex-row gap-4 items-center">
      <input type="text" name="buscar" value="<%= buscar %>" placeholder="Buscar productos..." class="w-full md:w-1/2 px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 transition">

      <select name="farmacia" class="w-full md:w-1/3 px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 transition">
        <option value="">Todas las farmacias</option>
        <% farmacias.forEach(f => { %>
        <option value="<%= f.id %>" <%= String(farmaciaSeleccionada) === String(f.id) ? 'selected' : '' %>><%= f.nombre %></option>
        <% }) %>
      </select>

      <button type="submit" class="bg-gradient-to-r from-blue-600 to-green-500 text-white px-6 py-2 rounded-lg hover:from-blue-700 hover:to-green-600 btn-glow transition transform hover:-translate-y-1">
        Buscar
      </button>
    </form>

    <!-- Grid de productos -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% productos.forEach((producto, index) => { %>

      <% 
  let bgColor = '#e5fff2'; // default verde pastel
  if (producto.stock <= 5) {
    bgColor = '#ffe5e5'; // rojo pastel
  } else if (producto.stock <= 20) {
    bgColor = '#fff9e5'; // amarillo pastel
  }
%>

<div class="relative rounded-2xl p-4 transform hover:-translate-y-2 hover:shadow-2xl transition-all duration-300 fade-slide"
     style="background-color: <%= bgColor %>;">

        

        <!-- Imagen con tooltip -->
        <div class="tooltip">
          <img src="/images/default-product.png" alt="<%= producto.nombre %>" class="w-full h-48 object-cover rounded-xl mb-4 transition-transform duration-300 hover:scale-105">
          <span class="tooltip-text"><%= producto.descripcion || 'Sin descripción' %></span>
        </div>

        <h2 class="text-xl font-semibold text-gray-800 mb-1"><%= producto.nombre %></h2>
        <p class="text-sm text-gray-500 mb-1">Farmacia: <%= producto.Farmacium ? producto.Farmacium.nombre : 'No asignada' %></p>
        <p class="text-gray-700 font-medium mb-2">Precio: $<%= producto.precio %></p>

        <% if (session && session.user) { %>
        <form action="/Public/agregarCarrito" method="POST" class="flex items-center gap-2 mt-2">
          <input type="hidden" name="productoId" value="<%= producto.id %>">
          <input type="hidden" name="farmaciaId" value="<%= producto.farmaciaId %>">
          <input type="number" name="cantidad" value="1" min="1" class="w-16 px-2 py-1 border rounded-md text-center">
          <button type="submit" class="bg-gradient-to-r from-green-500 to-blue-500 text-white px-4 py-2 rounded-lg">
            Agregar
          </button>
        </form>
        <% } else { %>
        <a href="/farma/login" class="block bg-gray-400 text-white px-4 py-2 rounded-lg text-center hover:bg-gray-500">
          Inicia sesión para comprar
        </a>
        <% } %>

      </div>
      <% }); %>
    </div>

  </main>

  <footer class="mt-12 py-6 text-center text-gray-500">
    &copy; <%= new Date().getFullYear() %> Tu Farmacia Online
  </footer>

</body>

</html>
