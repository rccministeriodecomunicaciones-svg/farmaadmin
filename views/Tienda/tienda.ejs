<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= nombrePagina %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <style>
    /* Animaci√≥n fade-slide */
    .fade-slide {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeSlideIn 0.6s forwards;
    }
    @keyframes fadeSlideIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Carrusel */
    .carousel {
      position: relative;
      overflow: hidden;
      border-radius: 0.75rem;
    }
    .carousel-item {
      display: none;
      width: 100%;
      height: 300px;
      object-fit: cover;
    }
    .carousel-item.active {
      display: block;
    }
    .carousel-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0, 0, 0, 0.4);
      color: #fff;
      padding: 0.5rem 1rem;
      border-radius: 9999px;
      cursor: pointer;
    }
    .carousel-btn.left { left: 10px; }
    .carousel-btn.right { right: 10px; }
  </style>
</head>

<body class="bg-gray-50 min-h-screen font-sans text-gray-800">

  <!-- Header -->
  <header class="bg-white shadow sticky top-0 z-50">
    <%- include('../partials/navbarPublic') %>
  </header>

  <!-- Banner tipo carrusel -->
  <section class="container mx-auto px-4 mt-6">
    <div class="carousel shadow-lg">
      <img src="/images/Oferta1.png" alt="Promoci√≥n 1" class="carousel-item active">
      <img src="/images/Oferta2.png" alt="Promoci√≥n 2" class="carousel-item">

      <button class="carousel-btn left" onclick="prevSlide()">‚ùÆ</button>
      <button class="carousel-btn right" onclick="nextSlide()">‚ùØ</button>
    </div>
  </section>

  <!-- Main -->
  <main class="container mx-auto px-4 py-10">

    <!-- Formulario b√∫squeda -->
    <form method="GET" action="/Public/productos" class="mb-10 flex flex-col md:flex-row gap-4 items-center">
      <input 
        type="text" name="buscar" value="<%= buscar %>" 
        placeholder="üîç Buscar productos..." 
        class="w-full md:w-1/2 px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 transition"
      >

      <select 
        name="farmacia" 
        class="w-full md:w-1/3 px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 transition">
        <option value="">Todas las farmacias</option>
        <% farmacias.forEach(f => { %>
          <option value="<%= f.id %>" <%= String(farmaciaSeleccionada) === String(f.id) ? 'selected' : '' %>>
            <%= f.nombre %>
          </option>
        <% }) %>
      </select>

      <button type="submit" 
        class="bg-gradient-to-r from-blue-600 to-green-500 text-white px-6 py-2 rounded-lg hover:from-blue-700 hover:to-green-600 btn-glow transition transform hover:-translate-y-1">
        Buscar
      </button>
    </form>

    <!-- T√≠tulo secci√≥n -->
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Ofertas del mes</h2>

    <!-- Grid productos -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% productos.forEach((producto) => { %>
        <% 
          let bgColor = '#ffffff';
          if (producto.stock <= 5) {
            bgColor = '#ffe5e5';
          } else if (producto.stock <= 20) {
            bgColor = '#fff9e5';
          }
        %>

        <div class="relative rounded-2xl p-4 bg-white shadow-md hover:shadow-xl transition-all duration-300 fade-slide"
             style="background-color: <%= bgColor %>;">
          
          <!-- Imagen -->
          <div class="relative">
            <img src="/images/default-product.png" 
                 alt="<%= producto.nombre %>" 
                 class="w-full h-40 object-cover rounded-lg mb-4 transition-transform duration-300 hover:scale-105">
            <% if (producto.stock <= 5) { %>
              <span class="absolute top-2 right-2 bg-red-500 text-white text-xs px-2 py-1 rounded-full">¬°Pocas unidades!</span>
            <% } else if (producto.stock <= 20) { %>
              <span class="absolute top-2 right-2 bg-yellow-500 text-white text-xs px-2 py-1 rounded-full">Stock limitado</span>
            <% } %>
          </div>

          <!-- Info producto -->
          <h2 class="text-lg font-bold text-gray-800 truncate"><%= producto.nombre %></h2>
          <p class="text-sm text-gray-500 mb-1">Farmacia: <%= producto.Farmacium ? producto.Farmacium.nombre : 'No asignada' %></p>
          <p class="text-green-600 font-semibold mb-3 text-lg"> $<%= producto.precio %></p>

          <!-- Bot√≥n acci√≥n -->
          <% if (session && session.user) { %>
            <form action="/Public/agregarCarrito" method="POST" class="flex items-center gap-2">
              <input type="hidden" name="productoId" value="<%= producto.id %>">
              <input type="hidden" name="farmaciaId" value="<%= producto.farmaciaId %>">
              <input type="number" name="cantidad" value="1" min="1" class="w-16 px-2 py-1 border rounded-md text-center">
              <button type="submit" class="bg-gradient-to-r from-green-500 to-blue-500 text-white px-4 py-2 rounded-lg hover:from-green-600 hover:to-blue-600 transition">
                üõí Agregar
              </button>
            </form>
          <% } else { %>
            <a href="/farma/login" class="block bg-gray-400 text-white px-4 py-2 rounded-lg text-center hover:bg-gray-500">
              Inicia sesi√≥n para comprar
            </a>
          <% } %>
        </div>
      <% }); %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="mt-12 py-6 text-center text-gray-500 border-t">
    &copy; <%= new Date().getFullYear() %> Tu Farmacia Online - Todos los derechos reservados
  </footer>

  <script>
    // Script simple carrusel
    let currentIndex = 0;
    const slides = document.querySelectorAll(".carousel-item");

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle("active", i === index);
      });
    }
    function nextSlide() {
      currentIndex = (currentIndex + 1) % slides.length;
      showSlide(currentIndex);
    }
    function prevSlide() {
      currentIndex = (currentIndex - 1 + slides.length) % slides.length;
      showSlide(currentIndex);
    }
  </script>
</body>
</html>
